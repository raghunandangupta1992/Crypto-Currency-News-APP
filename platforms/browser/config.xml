<?xml version='1.0' encoding='utf-8'?>
<widget id="com.raghunandangupta.cryptocurrencynews" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>CryptoCurrency Latest News</name>
    <description>
        Stay updated with the latest news in cryptocurrency world. All about Bitcoins, Ethereum, Ripple etc. Get real time updates about the crypto world. App also helps you to take better investment decisions for cryptocurrencies.
    </description>
    <author email="raghunandangupta1992@gmail.com" href="https://medium.com/@rggroups">
        Raghunandan Gupta
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
